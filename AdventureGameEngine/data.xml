<?xml version="1.0" encoding="utf-8"?>
<data>
  
  <title id="1">Adventure Game Engine</title>

  <!-- #### ASSETS ####-->
  <assets path="assets/">
    <sprite name="street">cyberpunk-street.png</sprite>
    <sprite name="indoor">bar.png</sprite>

    <spritemap src="cursors.png">
      <sprite name="cursor-generic" xOffset="0" yOffset="0" width="356" height="150"/>
      <sprite name="cursor-highlight" xOffset="356" yOffset="0" width="140" height="380"/>
    </spritemap>

    <spritemap src="keycards.png">
      <sprite name="key" xOffset="6" yOffset="6" width="56" height="64"/>
    </spritemap>

    <spritemap src="doors.png">
      <sprite name="doorClosed" xOffset="192" yOffset="0" width="96" height="104"/>
      <sprite name="doorOpen" xOffset="192" yOffset="104" width="96" height="104"/>
      <sprite name="lightswitchOn" xOffset="11" yOffset="236" width="9" height="14"/>
      <sprite name="lightswitchOff" xOffset="11" yOffset="332" width="9" height="14"/>
    </spritemap>

    <spritemap src="indie_suite_transparent.png">
      <animation name="8" xOffset="200" yOffset="0" width="50" height="80" steps="8" time="200"/>
      <animation name="9" xOffset="200" yOffset="0" width="50" height="80" steps="8" time="200"/>
      <animation name="10" xOffset="200" yOffset="0" width="50" height="80" steps="8" time="200"/>
      <animation name="11" xOffset="200" yOffset="0" width="50" height="80" steps="8" time="200"/>
      <animation name="12" xOffset="600" yOffset="0" width="50" height="80" steps="6" time="200"/>
      <animation name="13" xOffset="600" yOffset="0" width="50" height="80" steps="6" time="200"/>
      <animation name="14" xOffset="150" yOffset="80" width="50" height="80" steps="5" time="200"/>
      <sprite name="15" type="static" xOffset="0" yOffset="0" width="50" height="80"/>
      <sprite name="16" type="static" xOffset="0" yOffset="50" width="50" height="80"/>
    </spritemap>

    <audio name="lightswitch">nameOfFile.ogg</audio>
  </assets>

  <!-- #### CURSOR ####-->
  <cursor>
    <generic>
      <sprite type="static" load="cursor-generic"/>
    </generic>
    <highlight>
      <sprite type="static" load="cursor-highlight"/>
    </highlight>
    <mouseinput/>
  </cursor>

  <!-- #### SCENE 1 ####-->
  <scene name="street">
    
    <gameobject name="background" posX="0" posY="0" scaleX="1" scaleY="1" rotation="0">
      <sprite load="street" posX="0" posY="0" scaleX="4" scaleY="4" rotation="0" originX="0.5" originY="0.5"/>
      <navigationmesh scaleOnYDepth="2">
        <polygon id="1" type="include">
          <vector x="0" y="0"></vector>
          <vector x="1000" y="0"></vector>
          <vector x="0" y="1000"></vector>
          <vector x="1000" y="1000"></vector>
        </polygon>
        <polygon id="2" type="exclude">
          <vector x="450" y="450"></vector>
          <vector x="650" y="0"></vector>
          <vector x="0" y="650"></vector>
          <vector x="650" y="650"></vector>
        </polygon>
      </navigationmesh>
    </gameobject>
    
    <gameobject name="player" posX="0" posY="0" scaleX="1" scaleY="1" rotation="0">
      <animationset>
        <idle/>
        <moveUp/>
        <moveDown/>
        <moveLeft/>
        <moveRight/>
      </animationset>
      <move speed="5"/>
    </gameobject>
    
    <gameobject name="key" posX="0" posY="0" scaleX="1" scaleY="1" rotation="0">
      <sprite load="key" posX="0" posY="0" scaleX="1" scaleY="1" rotation="0" originX="0.5" originY="0.5"/>
      <description id="1">This is a key for a door.</description>
      <interaction type="pickUp" range="100"/>
    </gameobject>
    
    <gameobject name="door" posX="0" posY="0" scaleX="1" scaleY="1" rotation="0">
      <sprite load="doorClosed" posX="0" posY="0" scaleX="1" scaleY="1" rotation="0" originX="0.5" originY="0"/>
      <sprite load="doorOpen" posX="0" posY="0" scaleX="1" scaleY="1" rotation="0" originX="0.5" originY="0" enabled="0"/>
      <description id="1" enabled="1">This door is closed.</description>
      <description id="2" enabled="0">This door is open.</description>
      <triggerZone id="1" range="100" loadScene="indoor"/>
      <interaction type="combination" useItem="key" range="100">
        <enable type="sprite">doorOpen</enable>
        <disable type="sprite">doorOpen</disable>
        <enable type="description">2</enable>
        <disable type="description">1</disable>
        <enable type="triggerZone">1</enable>
      </interaction>
    </gameobject>
    
  </scene>
  
  <!-- #### SCENE 2 ####-->
  <scene name="indoor">
    
    <gameobject name="background" posX="0" posY="0" scaleX="1" scaleY="1" rotation="0">
      <sprite load="indoor" posX="0" posY="0" scaleX="4" scaleY="4" rotation="0" originX="0.5" originY="0.5"/>
      <navigationmesh scaleOnYDepth="2">
        <polygon id="1" type="include">
          <vector x="0" y="0"></vector>
          <vector x="1000" y="0"></vector>
          <vector x="0" y="1000"></vector>
          <vector x="1000" y="1000"></vector>
        </polygon>
        <polygon id="2" type="exclude">
          <vector x="450" y="450"></vector>
          <vector x="650" y="0"></vector>
          <vector x="0" y="650"></vector>
          <vector x="650" y="650"></vector>
        </polygon>
      </navigationmesh>
    </gameobject>

    <gameobject name="player" posX="0" posY="0" scaleX="1" scaleY="1" rotation="0">
      <animationset>
        <idle/>
        <moveUp/>
        <moveDown/>
        <moveLeft/>
        <moveRight/>
      </animationset>
      <move speed="5"/>
    </gameobject>
    
    <gameobject name="lightswitch" posX="0" posY="0" scaleX="1" scaleY="1" rotation="0">
      <sprite load="lightswitchOff" posX="0" posY="0" scaleX="1" scaleY="1" rotation="0" originX="0.5" originY="0"/>
      <description id="1" enabled="1">A lightswitch.</description>
      <interaction type="clickable" range="100">
        <enable type="gameobject">background</enable>
        <playaudio load="lightswitch"/>
      </interaction>
    </gameobject>
    
  </scene>
  
</data>